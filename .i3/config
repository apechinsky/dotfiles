# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# MPD hotkey
bindsym Mod4+space exec mpc toggle
bindsym $mod+KP_Begin exec mpc toggle
bindsym $mod+KP_Prior exec mpc prev
bindsym $mod+KP_Next exec mpc next
bindsym $mod+KP_Up exec amixer -q set Master 1%+ unmute
bindsym $mod+KP_Down exec amixer -q set Master 1%- unmute

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt

#        bindsym 113 resize shrink width 10 px or 10 ppt
#        bindsym 116 resize grow height 10 px or 10 ppt
#        bindsym 111 resize shrink height 10 px or 10 ppt
#        bindsym 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# notebook specific settings
bindsym XF86AudioRaiseVolume exec amixer -q set Master 10%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 10%- unmute
bindsym XF86PowerOff exec gksu pm-suspend 
#bindsym XF86AudioMute exec amixer -q set Master toggle

